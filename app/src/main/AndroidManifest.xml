<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kocha.myteam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cleanup_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cleanup_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="Менеджер команды">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TeamListActivity"
            android:label="Экран списка сотрудников"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.AddingEmployeeActivity"
            android:label="Экран добавления сотрудника"
            android:noHistory="true"
            android:parentActivityName=".activity.TeamListActivity" />
    </application>

</manifest>